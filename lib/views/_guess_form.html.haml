%hr.mb-4
%form{:method => "post", :action => "#{Web::SUBMIT_URL}"}
  .form-group
    %input.form-control.guess_input{:name => "number", :pattern => "^[1-6]{4}$", :placeholder => "#{last_guess}", :required => true, :autocomplete => 'off', :autofocus => "#{true if first_attempt?}"}
  - unless game.won?
    .form-group.guess_markers_list
      #guess_marker= marker
  %hr.mb-4
  %button.btn.btn-primary.btn-lg= message['form']['submit']['answer']
  %a.btn.btn-warning.btn-lg.float-right{:href => "#{Web::HINT_URL}", :role => "button", :class => "#{'disabled' unless hints_allowed?}"}
    = message['form']['submit']['hint']
    - if hint
      %span.badge.badge-light
        = hint
